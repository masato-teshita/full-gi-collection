- breadcrumb :show_shop, @shop
= render "layouts/breadcrumbs"

.action-modal-wrapper
.action-modal
  .wom-form
    .wom-form-header
      .modal-title
        口コミを投稿する
      %i.fas.fa-times.modal-times
    = form_for [@shop, @wom] do |f|
      .wom-form-body
        .shop-name
          = @shop.name
        .visit-type-select
          .select-msg 
            口コミ対象を選択してください
          .select-form
            .select-box
              = f.radio_button :visit_type, '購入', id: 'visit-type-buy', class: 'radio-btn-buy'
              .select-box__buy
                = f.label :visit_type, for: 'visit-type-buy' do
                  .btn-label
            .select-box
              = f.radio_button :visit_type, '売却', id: 'visit-type-sell', class: 'radio-btn-sell'
              .select-box__sell
                = f.label :visit_type, for: 'visit-type-sell' do
                  .btn-label
        #star.input-rate
          = f.label :rate, '評価'
          = f.hidden_field :rate, id: :review_star
        .wom-title
          = f.text_field :title, placeholder: '口コミのタイトルを入力してください', class: 'wom-title-field'
        .wom-content
          = f.text_area :content, placeholder: '口コミ本文を入力してください', class: 'wom-content-field'
      .wom-form-footer
        .visit-date
          = f.label :visit_date, '訪問日'
          = date_field_tag :visit_date, required: 'required'
        .send-btn
          = f.submit '登録', class: 'wom-send-btn'
    :javascript
      $('#star').raty({
        size: 40,
        starOff: "#{asset_path('star-off.png')}",
        starOn: "#{asset_path('star-on.png')}",
        starHalf: "#{asset_path('star-half.png')}",
        scoreName: 'wom[rate]', 
      });
  .bookmark-notif
    .bookmark-notif-header
      .modal-title
        ショップの保存
      %i.fas.fa-times.modal-times
    .shop-name
      = @shop.name
    .notif-msg
      %p 保存しました！
    .bookmark-link
      - if user_signed_in?
        = link_to '保存済み一覧へ', user_shops_path(current_user.id)

.shop-wrapper
  .shop-header
    .info-wrap
      .shop-name
        = @shop.name
      .shop-top-info
        .shop-top-info__rate
          .star-rating
            ★★★★★
          .shop-rating
            3.52
        .shop-top-info__woms
          %i.fas.fa-comment-dots<>
          = "#{@woms.count} 件"
        .shop-top-info__bookmarks
          %i.fas.fa-bookmark.fa-lg<>
          = "#{@users.count} 件"
      .shop-bottom-info
        = "エリア：    ジャンル： #{@shop.show_genres}"
    .action-wrap
      - if user_signed_in?
        %div{ id: "woms-count-#{@shop.show_user_woms(current_user)}", class: "action-btn wom-post-btn" }
          %i.fas.fa-user-check.fa-lg
          - if @shop.show_user_woms(current_user) != "0"
            = @shop.show_user_woms(current_user)
          %span 行った
        %div{ id: "users-count-#{@users.count}", class: "action-btn bookmark-btn"}
          %i.fas.fa-bookmark.fa-lg
          %span 保存
      - else
        #woms-count-0.action-btn
          = link_to new_user_session_path do
            %i.fas.fa-user-check.fa-lg
            %span 行った
        #users-count-0.action-btn
          = link_to new_user_session_path do
            %i.fas.fa-bookmark.fa-lg
            %span 保存
  .shop-body
    %ul.shop-menu-bar
      %li.shop-menu.first-menu
        トップ
      %li.shop-menu
        取扱商品
      %li.shop-menu
        = link_to '口コミ', shop_woms_path(@shop.id)
      %li.shop-menu
        地図
    .shop-content
      .shop-content__top
        = image_tag @shop.image.url, class: 'shop-img'
        = @shop.outline
      .shop-content__items
      .shop-content__woms
      .shop-content__map