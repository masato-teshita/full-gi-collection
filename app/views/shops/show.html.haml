- breadcrumb :show_shop, @shop
= render "layouts/breadcrumbs"
.shop-wrapper
  = render "header"
  .shop-body
    %ul.shop-menu-bar
      %li.shop-menu#selected-menu
        = link_to(shop_path(@shop.id), class: 'shop-menu-link') do
          %span.shop-menu-name 店舗トップ
      %li.shop-menu
        = link_to('#', class: 'shop-menu-link') do
          %span.shop-menu-name 取扱商品
      %li.shop-menu
        = link_to(shop_woms_path(@shop.id), class: 'shop-menu-link') do
          %span.shop-menu-name 口コミ
      %li.shop-menu
        = link_to('#', class: 'shop-menu-link') do
          %span.shop-menu-name 地図
    .shop-content
      .shop-content__top
        = image_tag @shop.image.url, class: 'shop-img'
        = @shop.outline
      .shop-content__items
      .shop-content__woms
      .shop-content__map