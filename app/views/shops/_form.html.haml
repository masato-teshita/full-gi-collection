= form_for @shop do |f|
  .field
    .field__label
      = f.label :name, '店舗名'
    .field__input
      = f.text_field :name, placeholder: '店舗名', class: 'field__input--text-type'
  .field
    .field__label
      = f.label :outline, '店舗紹介'
    .field__input
      = f.text_area :outline, placeholder: '店舗紹介', class: 'field__input--textarea'
  .field
    .field__label
      = f.label :image, '店舗画像', class: 'image'
    .field__input
      #image-box
        .shop-num-0#image-box__container
          = f.fields_for :shop_images do |i|
            %div{class: "input-area", tabindex: 0}
              = i.file_field :shop_image, type: 'file', class: "img-file", name: "shop[shop_image][]", value:"", style: "display:none", required: "required", multiple: :true
              %label{for: "shop_shop_images_attributes_0_shop_image", class: "input-area__label"}
                %i.fas.fa-camera
  .field
    .field__label
      = f.label :address, '住所'
    .field__input
      = f.text_field :address, placeholder: '郵便番号なし。番地は半角', class: 'field__input--text-type'
  .field
    .field__label
      = f.label :phone_number, '電話番号'
    .field__input
      = f.text_field :phone_number, placeholder: '電話番号。ハイフンあり'
  .field
    .field__label
      = f.label :area_id, 'エリア'
    .field__input
      = f.fields_for :area_id do |i|
        = i.select :area_id, Area.all.collect {|p| [p.name, p.id]},{prompt: "選択してください"},{class: 'field__input--checkbox', name: "shop[area_id][]"}
  .field
    .field__label
      = f.label :genre_id, 'ジャンル'
    .field__input
      = f.collection_check_boxes :genre_ids, Genre.all, :id, :name, include_hidden: false do |b|
        = b.check_box
        = b.label { b.text }          
  .field
    = f.submit '登録', class: 'send-btn'