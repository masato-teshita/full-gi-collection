.top-main
  .search-area
    %h2.search-area__title
      %span エリアから探す
    .search-area__area
      .selected-area
        .selected-area__name
          %span 東京
        .selected-area__store-count
          %span= "#{@shops.count}件"
      %ul.top-areas
        - @top_areas.each do |top_area|
          %li.top-area
            = link_to(shops_searches_path(area_id: top_area.id), class: 'top-area-link') do
              .top-area-box
                %span.top-area-name= top_area.name
                %span.top-area-shop-count= "#{top_area.shops.count}件"
      %ul.area-list.clearfix
        - @areas.each do |area|
          %li.all-area
            = link_to(shops_searches_path(area_id: area.id), class: 'area-link') do
              %span= area.name
