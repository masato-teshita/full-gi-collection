.top-main
  .search-area
    %h2.search-area__title
      %span エリアから探す
    .search-area__area
      .selected-area
        .selected-area__name
          %span 東京
        .selected-area__store-count
          %span= "#{@shops.count}件"
      %ul.top-areas
        - @top_areas.each do |top_area|
          %li.top-area
            = link_to(shops_search_path(@q, 'q[area_name_cont]': top_area.name), class: 'top-area-link') do
              .top-area-box
                %span.top-area-name= top_area.name
                %span.top-area-shop-count= "#{top_area.shops.count}件"
      %ul.area-list.clearfix
        - @areas.each do |area|
          %li.all-area
            = link_to(shops_search_path(@q, 'q[area_name_cont]': area.name), class: 'area-link') do
              %span= area.name
  .search-genre
    %h2.search-genre__title
      %span ジャンルから探す
    .search-genre__area
      %ul.top-genres
        - @top_genres.each do |top_genre|
          %li.top-genre
            = link_to(shops_search_path(@q, 'q[genres_name_eq]': top_genre.name), class: 'top-genre-link') do
              = image_tag asset_path(top_genre.image), class: 'top-genre__img'
              .top-genre__name
                %span= top_genre.name
              .top-genre__store-count
                %span= "#{top_genre.shops.count}件"
      %ul.genre-list.clearfix
        - @genres.each do |genre|
          %li.all-genre
            = link_to(shops_search_path(@q, 'q[genres_name_eq]': genre.name), class: 'genre-link') do
              %span= genre.name
    .search-genre__all
      -# = link_to 'ジャンル一覧へ', genres_path, class: 'genre-all-link'
  .search-brand
    %h2.search-brand__title
      %span ブランドから探す
    .search-brand__area
      = render 'brands/brands'
    .search-brand__all
      -# = link_to 'ブランド一覧へ', brands_path, class: 'brand-all-link'

